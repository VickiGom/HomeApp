<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/temLy"
    android:background="@drawable/gradient_animation"
    tools:context=".TemperaturaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:font="@color/black"
            android:gravity="center"
            android:text="Temperatura"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:translationX="99dp"></TextView>

        <ImageView
            android:layout_width="365dp"
            android:layout_height="275dp"
            app:srcCompat="@mipmap/temp"
            android:translationX="25dp"
            android:translationY="15dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperando..."
            android:id="@+id/TexTempera"
            android:textSize="30dp"
            android:textColor="@color/red"
            android:translationX="30dp"
            android:translationY="40dp">
        </TextView>
        <Button
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:translationX="35dp"
            android:id="@+id/btnSalir3"
            android:text="Salir"
            android:backgroundTint="@color/Boton"
            android:textColor="@color/white"
            android:translationY="115dp"
            android:background="@drawable/boton"
            >
        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>